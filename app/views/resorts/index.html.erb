<div id="map-container" data-controller="maps">
  <div class="sidebar">
    <div class="resort-counter">
      <span data-target="maps.counter" id="resort-counter-number"></span>
      <strong>Resorts Shown</strong>
    </div>

    <div class="condition-key">
      <strong>Conditions</strong>
      <!-- <div class="conditions-holder"> -->
        <div class="condition-line">
          <div class="condition-key-marker great" style="pointer-events:none"></div>
            <h2>Powder Day</h2>
            <small>Over 10cm of snow</small>
        </div>
        <div class="condition-line">
          <div class="condition-key-marker good" style="pointer-events:none"></div>
          <h2 >Fresh Snow</h2>
          <small>Up to 10 cm of new snow</small>
        </div>
        <div class="condition-line">
          <div class="condition-key-marker average" style="pointer-events:none"></div>
          <h2>Decent</h2>
          <small>No new snow</small>
        </div>
        <div class="condition-line" id="last" >
          <div class="condition-key-marker bad" style="pointer-events:none"></div>
          <h2 >Bad Conditions</h2>
          <small>Either raining or not enough snow</small>
        </div>
      <!-- </div> -->
    </div>
  </div>

  <div id="map-buttons-holder">
    <div class="map-button selected" data-action="click->maps#filter click->maps#select" data-value="">All resorts</i></div>
    <div class="map-button" data-action="click->maps#filter click->maps#select" data-value="new_snow=true"><i class="far fa-snowflake"></i>&nbsp&nbspFresh powder</div>
    <div class="map-button" data-action="click->maps#filter click->maps#select" data-value="lots_snow=true"><i class="far fa-snowflake"></i>&nbsp&nbspDeep snow</div>
    <div class="map-button" data-action="click->maps#filter click->maps#select" data-value="favorites=true"><i class="fas fa-heart"></i>&nbsp&nbspFavorites</div>
    <div class="map-button" data-action="click->maps#timeMachine" data-value="favorites=true" id="time-machine-button"><i class="fas fa-clock"></i>&nbsp&nbspForecasts</div>
  </div>


  <div id="map-slider-holder">
    <div class="range">
      <input data-target="maps.slider" data-action="change->maps#displayDay" type="range" min="0" max="3" steps="1" value="0" id='slider'>
      <div class="day-labels">
        <div class="day active">Today</div>
        <div class="day"><%= (Time.now + 1.day).strftime("%A") %></div>
        <div class="day"><%= (Time.now + 2.day).strftime("%A") %></div>
        <div class="day"><%= (Time.now + 3.day).strftime("%A") %></div>
      </div>
    </div>
  </div>

  <div id="map" data-markers="<%= @markers.to_json %>" data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
</div>
