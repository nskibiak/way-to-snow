<div class="container">
  <div class="resort-header"></div>
    <h1><%= @resort.name %></h1>
  </div>
  <div class="resort-information">

  </div>
  <div class="weather-table">
    <table class="forecast-table">
      <thead>
        <tr>
          <th scope="col"></th>
          <% @resort.forecasts.each do |forecast| %>
            <td><%= forecast.forecast_day %></td>
          <% end %>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">Max Temperature</th>
          <% @resort.forecasts.each do |forecast| %>
            <td><%= forecast.max_temperature %>°C</td>
          <% end %>
        </tr>
        <tr>
          <th scope="row">Min Temperature</th>
          <% @resort.forecasts.each do |forecast| %>
            <td><%= forecast.min_temperature %>°C</td>
          <% end %>
        </tr>
        <tr>
          <th scope="row">Snowfall</th>
          <% @resort.forecasts.each do |forecast| %>
            <td><%= forecast.snow_amount %> cm</td>
          <% end %>
        </tr>
        <tr>
          <th scope="row">Rain</th>
          <% @resort.forecasts.each do |forecast| %>
            <td><%= forecast.rain %></td>
          <% end %>
        </tr>
        <tr>
          <th scope="row">Wind Direction</th>
          <% @resort.forecasts.each do |forecast| %>
            <td><%= forecast.wind_direction %></td>
          <% end %>
        </tr>
        <tr>
          <th scope="row">Wind Speed</th>
          <% @resort.forecasts.each do |forecast| %>
            <td><%= forecast.wind_speed %> km/h</td>
          <% end %>
        </tr>
      </tbody>
    </table>
  </div>
  <div id="qna-view">
    <%= render 'questions/form', resort: @resort, question: @question %>
    <% if @resort.questions.blank? %>
        Be the first to leave a review for <%= @resort.name %>
    <% else %>
      <h3> Following are <%= @resort.questions.count %> nos of questions for <%= @resort.name %>: </h3>
      <% @resort.questions.each do |question| %>
      <%= render 'questions/index', question: question %>
      <% end %>
    <% end %>
  </div>
</div>
