<div style="display: flex; justify-content: center">
  <div class="col-8">
    <div class="driving-cost">
      <form>
        <div class="row">
          <div class="col">
            <input type="text" class="form-control" id="travelers" data-action="change->itinerary#changeInput" placeholder="Number of travellers">
          </div>
          <div class="col">
            <input type="text" class="form-control" id="days" data-action="change->itinerary#changeInput" placeholder="Number of days">
          </div>
        </div>
      </form>
    </div>
  </div>
</div>


